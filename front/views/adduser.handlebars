<h1>Cadastro de Usuarios</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form method="POST" action="/user/add">
  <div class="form-group">
    <label>ID</label>
    <input type="text" name="id" class="form-control" placeholder="ID">
  </div>
  <div class="form-group">
    <label>Nome</label>
    <input type="text" name="first_name" class="form-control" placeholder="Nome">
  </div>
  <div class="form-group">
    <label>Sobrenome</label>
    <input type="text" name="last_name" class="form-control" placeholder="Sobrenome">
  </div>
  <div class="form-group">
    <label>Email</label>
    <input type="text" name="email" class="form-control" placeholder="Preencher com o seu Email">
  </div>
  <div class="form-group">
    <label>Telemóvel</label>
    <input type="text" name="phone" class="form-control" placeholder="Coloque aqui seu numero de Telemóvel / Celular">
  </div>
  <input type="submit" class="btn btn-primary" value="Salvar">
</form>
